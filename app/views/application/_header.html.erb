<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only"><%= t('defaults.toggle_navigation') %></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to t('defaults.project_name'), root_path, class: 'navbar-brand' %>
  </div>

  <div class="navbar-collapse collapse">
    <%= render 'menu' %>
  </div>

  <div class="feedback <%= 'feedback-active' if flash[:alert] || flash[:notice] %>">
    <% if flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %> <button type="button" class="close" aria-hidden="true">&times;</button></div>
    <% end -%>

    <% if flash[:notice] %>
      <div class="alert alert-success"><%= flash[:notice] %> <button type="button" class="close" aria-hidden="true">&times;</button></div>
    <% end -%>
  </div>
</div>

