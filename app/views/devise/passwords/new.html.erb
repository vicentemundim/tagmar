<%= content_for :body_class, 'external-form' %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-forgot-password' }) do |f| %>
  <h2><%= t('.title') %></h2>

  <%= f.input :email, label: false, required: true, autofocus: true %>

  <%= f.button :submit, t('.button'), class: 'btn btn-lg btn-primary btn-block' %>
<% end -%>
