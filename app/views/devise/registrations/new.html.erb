<%= content_for :body_class, 'external-form' %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signup' }) do |f| %>
  <fieldset class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
    <h2><%= t('.title') %></h2>

    <%= f.input :name, autofocus: true %>
    <%= f.input :email, autofocus: true %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>

    <%= f.button :submit, t('.button'), class: 'btn btn-lg btn-primary' %>
  </fieldset>
<% end -%>

<div class="clearfix"></div>
