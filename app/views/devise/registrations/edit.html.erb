<%= content_for :body_class, 'profile external-form' %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-profile' }) do |f| %>
  <div class="col-xs-12">
    <h2><%= t('.title', user: current_user.name) %></h2>

    <div class="row">
      <fieldset class="col-md-4">
        <legend><%= t('.fieldsets.basic_data') %></legend>

        <%= f.input :name, autofocus: true %>
        <%= f.input :email, autofocus: true %>

        <%= f.input :current_password, :required => true %>
      </fieldset>

      <fieldset class="col-md-4 col-md-offset-2">
        <legend><%= t('.fieldsets.change_password') %></legend>

        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </fieldset>
    </div>

    <%= f.button :submit, t('.button'), class: 'btn btn-lg btn-primary' %>
  </div>
<% end -%>

<div class="clearfix"></div>
